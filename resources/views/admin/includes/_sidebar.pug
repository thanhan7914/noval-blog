.app-sidebar__overlay(data-toggle="sidebar")
aside.app-sidebar

	.app-sidebar__user
		img.app-sidebar__user-avatar(src='https://s3.amazonaws.com/uifaces/faces/twitter/jsa/48.jpg', alt='User Image')
		div
			p.app-sidebar__user-name Admin
			p.app-sidebar__user-designation Frontend Developer

	ul.app-menu
		li
			a.app-menu__item(href='/admin/dashboard' class={'active': activePage == 'dashboard'})
				i.app-menu__icon.fa.fa-dashboard
				span.app-menu__label Dashboard

		li.treeview(class={'is-expanded': activeGroup == 'posts'})
			a.app-menu__item(href='#', data-toggle='treeview')
				i.app-menu__icon.fa.fa-superpowers
				span.app-menu__label Post
				i.treeview-indicator.fa.fa-angle-right
			ul.treeview-menu
				li
					a.treeview-item(href='/admin/post' class={'active': activePage == 'post-index'})
						i.icon.fa.fa-circle-o
						|  Show all post
				li
					a.treeview-item(href='/admin/post/create' class={'active': activePage == 'post-create'})
						i.icon.fa.fa-circle-o
						|  Create a post
		li
			a.app-menu__item(href='/admin/category' class={'active': activePage == 'category'})
				i.app-menu__icon.fa.fa-bookmark-o
				span.app-menu__label Categoy Management
